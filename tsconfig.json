{
  "compilerOptions": {
    "baseUrl": "./src",
    "importHelpers": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
      "@core/*": ["core/*"],
      "@backoffice/*": ["backoffice/*"],
      "@notifications/*": ["notifications/*"]
    }
  },
  "exclude": ["coverage", "data", "dist", "node_modules"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
