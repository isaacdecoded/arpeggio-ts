{
  "name": "arpeggio-ts",
  "version": "1.0.0",
  "description": "Coding template for DDD and Clean Architecture based projects",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaacdecoded/arpeggio-ts"
  },
  "author": "Isaac Herrera",
  "main": "dist/src/index.js",
  "scripts": {
    "prepare": "husky",
    "build": "tsc --build && yarn lint",
    "build:watch": "tsc --build -w",
    "start": "node ./dist/src/index.js",
    "start:watch": "nodemon --delay 3 --watch dist --inspect ./dist/src/index.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "test": "NODE_ENV=test jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16 || <=21.7.1",
    "yarn": ">=1.22"
  },
  "_moduleAliases": {
    "@core": "dist/src/core"
  }
}
