{
  "name": "arpeggio-ts",
  "version": "1.0.0",
  "description": "Clean Architecture + SOLID principles + DDD approach based software development template",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaacdecoded/arpeggio-ts"
  },
  "author": "Isaac Herrera",
  "main": "dist/src/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc --build && yarn lint",
    "build:watch": "tsc --build -w",
    "start": "node ./dist/src/index.js",
    "start:watch": "nodemon --delay 3 --watch dist --inspect ./dist/src/index.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "test": "NODE_ENV=test jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.3",
    "jest": "^29.0.3",
    "nodemon": "^2.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3"
  },
  "engines": {
    "node": ">=16",
    "yarn": ">=1.22"
  },
  "_moduleAliases": {
    "@core": "dist/src/core"
  }
}
